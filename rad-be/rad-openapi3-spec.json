  "info": {
    "title": "RAD System",
    "description": "ðŸ“š RAD System API Documentation",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "RAD System Api",
      "description": "Rapid development infrastructure for nestjs and angular"
    },
    {
      "name": "auth",
      "description": "RAD authentication management"
    },
    {
      "name": "users",
      "description": "RAD users management"
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "jwt-auth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "AdminUpdateUserRoleDto": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "super_user",
              "admin",
              "user",
              null
            ],
            "description": "User role - null removes admin privileges"
          }
        },
        "required": [
          "role"
        ]
      },
      "AdminUpdateUserStatusDto": {
        "type": "object",
        "properties": {
          "disabled": {
            "type": "boolean",
            "description": "Whether the user account is disabled"
          }
        },
        "required": [
          "disabled"
        ]
      },
      "AdminCreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User email address"
          },
          "username": {
            "type": "string",
            "description": "Username"
          },
          "password": {
            "type": "string",
            "description": "User password"
          },
          "fullName": {
            "type": "string",
            "description": "Full name"
          },
          "role": {
            "type": "string",
            "enum": [
              "super_user",
              "admin",
              null
            ],
            "description": "User role"
          },
          "disabled": {
            "type": "boolean",
            "description": "Whether the user is disabled",
            "default": false
          },
          "departments": {
            "type": "string",
            "description": "Departments (comma-separated)"
          },
          "ssoMask": {
            "type": "number",
            "description": "Bitmask SSO provider (null=local, 2=ldap, 4=google, ...)"
          }
        },
        "required": [
          "email",
          "username",
          "password",
          "fullName"
        ]
      },
      "AdminUpdateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User email address"
          },
          "username": {
            "type": "string",
            "description": "Username"
          },
          "password": {
            "type": "string",
            "description": "User password (leave empty to keep current)"
          },
          "fullName": {
            "type": "string",
            "description": "Full name"
          },
          "departments": {
            "type": "string",
            "description": "Departments (comma-separated)"
          },
          "ssoMask": {
            "type": "number",
            "description": "Bitmask SSO provider (null=local, 2=ldap, 4=google, ...)"
          }
        }
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "password": {
            "type": "string",
            "example": "Password123!"
          }
        },
        "required": [
          "password"
        ]
      },
      "ForgotPasswordDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "User email address",
            "example": "user@example.com"
          }
        },
        "required": [
          "email"
        ]
      },
      "ResetPasswordDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Password reset token received by email",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "password": {
            "type": "string",
            "description": "New password",
            "example": "newSecurePassword123"
          }
        },
        "required": [
          "token",
          "password"
        ]
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "The refresh token issued during login"
          }
        },
        "required": [
          "refresh_token"
        ]
      },
      "User": {
        "type": "object",
        "properties": {
          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string"
          },
          "deletedAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "createdAt",
          "updatedAt",
          "deletedAt"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "fullName": {
            "type": "string"
          },
          "ssoMask": {
            "type": "number",
            "description": "Bitmask SSO provider (null=local, 2=ldap, 4=google, ...)"
          },
          "avatar": {
            "type": "string"
          },
          "verifyToken": {
            "type": "string"
          },
          "isVerified": {
            "type": "boolean",
            "example": true
          },
          "departments": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "fullName"
        ]
      }
    }
  }
}